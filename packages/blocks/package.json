{
  "name": "@viamrobotics/prime-blocks",
  "version": "0.0.2",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "check": "concurrently -g pnpm:check-*",
    "check-svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check-lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "test": "svelte-kit sync && vitest run",
    "test:watch": "vitest"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./prime.css": "./prime.css"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "prime.css"
  ],
  "peerDependencies": {
    "@threlte/core": ">=6",
    "@threlte/extras": ">=5",
    "@viamrobotics/prime-core": ">=0.0.10",
    "svelte": ">=4 <5",
    "tailwindcss": ">=3",
    "three": ">=0.150",
    "trzy": ">=0.3.11"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.1.0",
    "@sveltejs/kit": "^1.22.6",
    "@sveltejs/package": "^2.2.1",
    "@sveltejs/vite-plugin-svelte": "^2.4.5",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/svelte": "^4.0.3",
    "@threlte/core": "^6.0.4",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/three": "^0.155.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@viamrobotics/eslint-config": "^0.1.2",
    "@viamrobotics/prettier-config": "^0.1.2",
    "@viamrobotics/prime-core": "workspace:*",
    "@viamrobotics/typescript-config": "^0.0.4",
    "autoprefixer": "^10.4.15",
    "classnames": "^2.3.2",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-sonarjs": "^0.20.0",
    "eslint-plugin-svelte": "^2.32.4",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.28",
    "prettier": "^3.0.2",
    "prettier-plugin-svelte": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "publint": "^0.2.0",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.0",
    "tailwindcss": "^3.3.3",
    "three": "^0.155.0",
    "trzy": "^0.3.12",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
