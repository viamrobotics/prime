---
const { headers } = Astro.props as {
  headers: Array<{ slug: string; text: string }>;
};
---

<ul class='flex flex-col gap-4 mt-24'>
  {
    headers.map(({ slug, text }) => {
      return (
        <li class='text-slate-400  hover:text-slate-900'>
          #<a href={`#${slug}`}>{text}</a>
        </li>
      );
    })
  }
</ul>
