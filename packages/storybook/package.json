{
  "name": "@viamrobotics/prime-storybook",
  "private": true,
  "version": "0.0.1",
  "packageManager": "pnpm@8.6.3",
  "scripts": {
    "check": "concurrently -g pnpm:check-*",
    "check-svelte": "svelte-check --tsconfig ./tsconfig.json",
    "check-lint": "pnpm run _prettier --check && pnpm run _eslint",
    "format": "pnpm run _prettier --write",
    "storybook": "storybook dev -p 6006",
    "build": "storybook build --docs -o prime",
    "_prettier": "prettier \"**/*.{js,cjs,ts,svelte,css,json,yml,yaml,md,mdx}\"",
    "_eslint": "eslint \".*.cjs\" \"**/*.{js,cjs,ts,svelte}\""
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.3.2",
    "@storybook/addon-docs": "^7.3.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-interactions": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/addon-styling": "^1.3.5",
    "@storybook/addon-svelte-csf": "^4.0.5",
    "@storybook/blocks": "^7.3.2",
    "@storybook/cli": "^7.3.2",
    "@storybook/svelte": "^7.3.2",
    "@storybook/sveltekit": "^7.3.2",
    "@storybook/testing-library": "^0.2.0",
    "@storybook/theming": "^7.3.2",
    "@sveltejs/adapter-auto": "^2.1.0",
    "@sveltejs/kit": "^1.22.4",
    "@sveltejs/package": "^2.2.0",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@viamrobotics/eslint-config": "^0.2.4",
    "@viamrobotics/prettier-config": "^0.3.2",
    "@viamrobotics/prime-core": "workspace:*",
    "@viamrobotics/typescript-config": "^0.1.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-storybook": "^0.6.13",
    "eslint-plugin-svelte": "^2.33.1",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "postcss": "^8.4.27",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "publint": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-gfm": "^3.0.1",
    "storybook": "^7.3.2",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.2",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.1",
    "typescript": "^5.2.2"
  },
  "type": "module"
}
